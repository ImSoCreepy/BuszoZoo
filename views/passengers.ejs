<%- include('header', {pageTitle: 'Utasok'}) -%>

    <div class="container pt-4">
        <h1 class="text-center" style="font-size:400%;">Utasok</h1>

        <div class="row justify-content-center">
            <div class="col-12 col-lg-10">
                <a class="btn btn-light btn-outline-dark" href="/">
                    <img src="/img/arrow.png" alt="Vissza" height="18"> Vissza
                </a>
                <a class="btn btn-light btn-outline-dark" href="/passenger/<%= bus._id %>/new">
                    + Új utas
                </a>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-12 col-lg-10">
                <div class="table-responsive">
                    <table class="table table-striped table-hover mt-3 border">
                        <thead class="text-center text-decoration-underline">
                        <tr>
                            <th scope="col">Név</th>
                            <th scope="col">Születési idő</th>
                            <th scope="col">Lakhely (város)</th>
                            <th scope="col">Hajszín</th>
                            <th scope="col">&#8203;</th>
                        </tr>
                        </thead>
                        <tbody class="text-center">
                            <% passengers.forEach(function(passenger){ %>
                                <tr>
                                    <td><%= passenger.name %></td>
                                    <td><%= passenger.dateOfBirth %></td>
                                    <td><%= passenger.city %></td>
                                    <td><%= passenger.hairColor %></td>
                                    <td>
                                        <div class="d-flex justify-content-end">
                                            <a class="btn btn-light btn-outline-dark" href="/passenger/<%= bus._id %>/edit/<%= passenger._id %>">
                                                <img src="/img/pen_black.png" alt="Szerkesztés" height="25">
                                            </a>
                                            <a class="btn btn-light btn-outline-dark ms-1" href="/passenger/<%= bus._id %>/del/<%= passenger._id %>">
                                                <img src="/img/bin.png" alt="Törlés" height="25">
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

<%- include('footer') -%>
