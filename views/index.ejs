<%- include('header', {pageTitle: 'Járatok' }) -%>

<div class="container pt-4">
    <h1 class="text-center" style="font-size:400%;">Járatok</h1>

    <div class="row justify-content-center">
        <div class="col-12 col-lg-10">
            <a class="btn btn-light btn-outline-dark" href="/bus/new">
                + Új járat
            </a>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-12 col-lg-10">
            <div class="table-responsive">
                <table class="table table-striped table-hover mt-3 border">
                    <thead class="text-center text-decoration-underline">
                        <tr>
                            <th scope="col">Rendszám</th>
                            <th scope="col">Márka</th>
                            <th scope="col">Szín</th>
                            <th scope="col">Csuklós</th>
                            <th scope="col">&#8203;</th>
                            <th scope="col">&#8203;</th>
                        </tr>
                    </thead>
                    <tbody class="text-center">
                        <% buses.forEach(function(bus){ %>
                            <tr>
                                <td><%= bus.regNum %></td>
                                <td><%= bus.make %></td>
                                <td><%= bus.color %></td>
                                <td><% if(bus.articulated === true){ %>Igen<% }else{ %>Nem<% } %></td>
                                <td>
                                    <a class="btn btn-light btn-outline-dark" href="/passenger/<%= bus._id %>">Utasok</a>
                                </td>
                                <td>
                                    <div class="d-flex justify-content-end">
                                        <a class="btn btn-light btn-outline-dark" href="/bus/edit/<%= bus._id %>">
                                            <img src="/img/pen_black.png" alt="Szerkesztés" height="25">
                                        </a>
                                        <a class="btn btn-light btn-outline-dark ms-1" href="/bus/del/<%= bus._id %>">
                                            <img src="/img/bin.png" alt="Törlés" height="25">
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<%- include('footer') -%>